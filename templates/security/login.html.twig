{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <main class="w-50 m-auto">
        <form method="post" class="m-3 w-75 m-auto">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 text-center font-weight-normal">Connexion</h1>
            <div class="my-2">
                <label class="" for="username">Email</label>
                <input class="form-control" type="email" value="{{ last_username }}" name="_username" id="username" autocomplete="email" required autofocus>
            </div>

            <div class="my-2">
                <label class="" for="password">Password</label>
                <input class="form-control" type="password" name="_password" id="password" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
            #}

            <button class="btn btn-lg btn-primary w-100 my-3" type="submit">
                Valider
            </button>
        </form>
        <div class="text-center">
            Pas encore inscrit ? <a href="{{ path('app_register') }}">Inscrivez-vous</a>
        </div>
    </main>
{% endblock %}
