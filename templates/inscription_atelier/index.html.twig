{% extends 'base.html.twig' %}

{% block title %}Inscription Lycéen{% endblock %}

{% block body %}
    <style>
        body {background-color: #FFFFF2; display:flex; flex-direction:column;align-items: center}
        form {width:450px ; }
        #lyceen{ padding: 10px 10px; margin: 20px 0;}
        .btn{display:flex; justify-content:start}
        button{ color:white; background-color: #eb6864; border:none; padding: 2px 10px; border-radius:5%}
    </style>
    {% for message in app.flashes('error') %}
        <div class="flash-error">
            {{ message }}
        </div>
    {% endfor %}
    <h1>Inscription Lycéen</h1>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <div class="btn">
        <button type="submit">S'inscrire</button>
    </div>
    {{ form_end(form) }}
{% endblock %}
